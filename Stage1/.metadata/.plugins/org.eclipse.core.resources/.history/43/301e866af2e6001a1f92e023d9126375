package _04.栈;

import java.util.Stack;

public class _20_有效的括号 {

	public boolean isValid(String str) {
		int len = str.length();
		Stack<Character> stack = new Stack<Character>();
		for (int i = 0; i < len; i++) {
			char c = str.charAt(i);
			if (c == '(' || c == '{' || c == '[') {
				stack.push(c);
			} else {
				if (stack.isEmpty()) return false;
				char left = stack.pop();
				if (left == '(' && c != ')') return false;
				if (left == '{' && c != '}') return false;
				if (left == '[' && c != ']') return false;
			}
		}
		
		return stack.isEmpty();
	}
}
